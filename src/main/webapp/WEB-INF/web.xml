<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <!--Index Page!-->
    <servlet>   
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/Inicio</url-pattern>
    </servlet-mapping>
    <!--Marcas Page!-->
    <servlet>   
        <servlet-name>marcas</servlet-name>
        <jsp-file>/marcas.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>marcas</servlet-name>
        <url-pattern>/Marcas</url-pattern>
    </servlet-mapping>
    <!--Contactanos Page!-->
    <servlet>   
        <servlet-name>contactanos</servlet-name>
        <jsp-file>/contactanos.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>contactanos</servlet-name>
        <url-pattern>/Contactanos</url-pattern>
    </servlet-mapping>
    <!--Contactanos Page!-->
    <servlet>   
        <servlet-name>acercaDe</servlet-name>
        <jsp-file>/acercaDe.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>acercaDe</servlet-name>
        <url-pattern>/AcercaDe</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
